article.page__mini-article
    .mini-article__cover(style=`background: url(${ post.cover || setting.default_cover }) 50% 50% no-repeat;`)
        .mini-article__date
            - var date = new Date(post.date || post.updatedAt)
            span.date__day #{date.getDate()}
            span.date__month #{date.getMonth() + 1}æœˆ

        a.icon.icon-enter(target="_blank", href=`/detail/${post.path}`)

    .mini-article__info
        h3.mini-article__title
            a(href=post.path, title=post.title) #{ post.title }
        p.mini-article__author by&nbsp;
            a.author__item(href=setting.author.link, target="_blank") #{ setting.author.name || setting.author.nick }

        if post.subtitle
            .min-article__desc #{ post.subtitle }

        if post.tags.length && post.tags[0].length
            .min-article__tags
                i.icon.icon-tab
                ul.tags__list.clearfix
                    each tag in post.tags
                        li.tags__item
                            a(href=`/tags?tag=${tag}`) #{tag}
