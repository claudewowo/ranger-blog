extends layout/_layout

append title
    title 凯子 | 悦读

append pageCss
    link(rel="stylesheet", href=`${setting.static}static/css/post.css?t=${setting.tstamp}`)

append content

    main.page__container.page__main
        .page__content
            .content__container
                each menu in data.menus
                    if menu.link === data.route
                        header#papers-header.post__info
                            h1.post__title #{menu.name}
                            if menu.settings
                                p.post__desc #{menu.settings.desc}

                if list
                    ul.blog__list
                        each item in list
                            li
                                a.blog__cover
                                    img.cover(src="", alt="")
                                .blog__intro
                                    h2.blog__title #{item.name}
                                    .blog__info
                                        span.blog__date #{item.date}
                                        span.dot ·
                                        span.blog__tags #{item.tags}

                    //- 分页 paginator
                    include _partial/paginator
                    +paginator(data.route)

                else
                    .nothing
                        i.icon.icon-result
                        p 暂无数据


